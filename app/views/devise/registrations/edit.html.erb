
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html:{class: 'form-signin'}) do |f| %>

  <h2 class="mb-3 fw-normal text-center">Edit <%= resource_name.to_s.humanize %></h2>

  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                label: false,
                required: false,
                placeholder: "Enter Email here",
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: false,
                required: false,
                placeholder: "Enter Password here",
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                label: false,
                required: true,
                placeholder: "Enter Confirmation here",
                input_html: { autocomplete: "current-password" } %>

  <div class="d-grid gap-2">
    <%= f.button :submit, "Update", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
